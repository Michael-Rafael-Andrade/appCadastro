{{! views/pessoas/listagem.hbs }}

<div class="container mt-4">
    <h2>{{title}}</h2>
    <p>Aplica√ß√£o CRUD - Listagem de Pessoas</p>

    <form method="GET" action="/pessoas/listagem" class="d-flex mb-3">
        <div class="input-group">
            <input type="text" name="q" class="form-control" placeholder="Buscar por nome..."
                aria-label="Buscar por nome">
            <button class="btn btn-outline-secondary" type="submit">
                Pesquisar üîç
            </button>
        </div>
    </form>

    <a href="/pessoas/cadastro" class="btn btn-primary mb-3">
        + Inserir Nova Pessoa
    </a> |
    <a href="/" class="btn btn-secondary">Voltar ao Menu</a><br>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Data de Nascimento</th>
                <th>Endere√ßo</th>
                <th>A√ß√µes</th>
            </tr>
        </thead>
        <tbody>
            {{#each pessoas}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.nome}}</td>
                <td>{{formatTelefone this.telefone}}</td> <!-- colocando mascara para exibir formatado -->
                <td>{{this.dataNascimento}}</td>
                <td>{{this.endereco}}</td>
                <td>
                    <a href="/pessoas/editar/{{this.id}}" class="btn btn-sm btn-info">Alterar</a>
                    <a href="/pessoas/excluir/{{this.id}}" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>