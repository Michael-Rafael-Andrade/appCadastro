{{! views/produtos/edicao.hbs }}

<div class="container mt-4">
    <h2>Editar Produto: {{produto.nome}}</h2>
    <p>Modifique os campos necessários:</p>

    <form method="POST" action="/produtos/editar/{{produto.id}}">

        <input type="hidden" name="id" value="{{produto.id}}">

        <div class="form-group mb-3">
            <label for="nome">Nome do Produto:</label>
            <input type="text" class="form-control" id="nome" name="nome" value="{{produto.nome}}" required>
        </div>

        <div class="form-group mb-3">
            <label for="descricao">Descrição:</label>
            <input type="text" class="form-control" id="descricao" name="descricao" value="{{produto.descricao}}">
        </div>

        <div class="form-group mb-3">
            <label for="quantidade">Quantidade em Estoque:</label>
            <input type="number" class="form-control" id="quantidade" name="quantidade" value="{{produto.quantidade}}"
                required min="0">
        </div>

        <div class="form-group mb-3">
            <label for="valor">Valor (R$):</label>
            <input type="number" class="form-control" id="valor" name="valor" value="{{produto.valor}}" step="0.01"
                required min="0">
        </div>

        <button type="submit" class="btn btn-success">Salvar Alterações</button>
        <a href="/produtos/listagem" class="btn btn-secondary">Cancelar</a>
    </form>
</div>